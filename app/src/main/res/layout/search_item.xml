<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:paddingBottom="8dp"
   >

    <RelativeLayout
        android:id="@+id/foundlayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:padding="2dp">

        <ImageView
            android:id="@+id/item_id"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginStart="2dp"
            android:scaleType="centerCrop"
            android:background="@android:color/white"
            />

        <TextView
            android:id="@+id/verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingstar"
            android:layout_toRightOf="@+id/item_id"
            android:padding="2dp"
            android:text="verified"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="30dp"
            android:background="@color/blue"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
             />

        <TextView
            android:id="@+id/item_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_id"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:text="business name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/business_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title_id"
            android:layout_toRightOf="@+id/item_id"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:maxLines="3"
            android:text="descript"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingstar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/business_description"
            android:layout_toRightOf="@+id/item_id"
            android:stepSize="1.0"
            android:layout_marginTop="4dp"
            android:numStars="5"
            android:scaleY="0.5"
            android:scaleX="0.5"
            />
        <LinearLayout
            android:id="@+id/searchnotfoundlayout"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/searchnotfoundtxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="search result not found add name to database."
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:layout_marginStart="8dp"
                android:layout_marginTop="14dp"
                />
            <Button
                android:id="@+id/addtodbbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:background="@drawable/yellow_border"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

        <!--style="?android:attr/ratingBarStyleSmall"-->
        <!--android:isIndicator="false"-->

    </RelativeLayout>

</android.support.v7.widget.CardView>